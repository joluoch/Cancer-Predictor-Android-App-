<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/primary_text_default_material_light">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"


        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@android:color/holo_red_light"
        tools:context=".predictions">


        <Button
            android:id="@+id/rf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="100"
            android:background="@android:color/holo_green_light"
            android:baselineAligned="false"
            android:text="Random Forest" />

        <Button
            android:id="@+id/nb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="90dp"
            android:background="@android:color/holo_green_light"
            android:text="Naive Bayes" />

        <Button
            android:id="@+id/j48"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="160dp"
            android:background="@android:color/holo_green_light"
            android:text="Decision Tree (J48)" />

        <Button
            android:id="@+id/logres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="230dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="230dp"
            android:background="@android:color/holo_green_light"
            android:text="Logistic Regression" />

        <Button
            android:id="@+id/lmt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="300dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="300dp"
            android:background="@android:color/holo_green_light"
            android:text="Logistic Model Trees (LMT)" />

        <Button
            android:id="@+id/svm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="370dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="370dp"
            android:background="@android:color/holo_green_light"
            android:text="Support Vector Machines (SVM)" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/holo_blue_dark"
            android:text="Choose Alorithm for Prediction : "
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/risklevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="450dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="450dp"
            android:background="@android:color/holo_blue_light"
            android:text="YOUR RISK LEVEL IS HIGH"
            android:textColor="@color/colorPrimaryDark"
            android:textColorLink="@color/colorPrimaryDark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="490dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="450dp"
            android:background="@android:color/holo_blue_light"
            android:text="@string/scores"
            android:textColor="@color/colorPrimaryDark"
            android:textColorLink="@color/colorPrimaryDark"
            android:textSize="18sp" />

    </RelativeLayout>

</ScrollView>